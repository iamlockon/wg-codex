{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WG Windows Client",
  "version": "0.1.0",
  "identifier": "com.wg.windowsclient",
  "build": {
    "beforeDevCommand": "npm --prefix ./ui run dev -- --host 127.0.0.1 --port 1420",
    "beforeBuildCommand": "npm --prefix ./ui run build",
    "devUrl": "http://127.0.0.1:1420",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "WG Windows Client",
        "width": 1120,
        "height": 760,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.ico"],
    "targets": ["msi", "nsis"],
    "resources": ["../wg-tools"]
  }
}
